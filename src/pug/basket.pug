extends layout/layout

block  variable
    - let pageName = 'basket'; 

block content
    main.main.main-basket
        .basket
            .basket__content
                .basket__wr-title 
                    h1.basket__title Корзина
            
                ul.basket__goods-list
                    li.basket__goods-item(data-index='5' data-sku_title='Черный внутри' data-sku_packing='Черный внутри' data-article='1')
                        .basket__goods-wr-content
                            .basket__goods-content
                                .basket__goods-img
                                    img(src='./img/content/merch-t-shirt-black-black-inside-front-content.webp' alt='Фото товара')
                                .basket__goods-description
                                    p Футболка R18: 'Черный внутри'
                                    p Размер: М; Черная
                            .basket__goods-amount-price
                                .basket__goods-amount
                                    .basket__goods-amount-button(data-type='decrement')
                                    input.basket__goods-amount-num(type='text' placeholder='0')
                                    .basket__goods-amount-button(data-type='increment')
                        .basket__goods-info-price
                            .basket__goods-info 
                                p Скидка составляет 10%, так как Вы заказали более 10 кг кофе
                            .basket__goods-wr-price
                                .basket__goods-discount #[span 6750] р.
                                .basket__goods-price #[span 5000] р.
                    li.basket__goods-item(data-index='5' data-sku_title='Черный внутри' data-sku_packing='Черный внутри' data-article='1')
                        .basket__goods-wr-content
                            .basket__goods-content
                                .basket__goods-img
                                    img(src='./img/content/merch-t-shirt-white-only-arabica-front-content.webp' alt='Фото товара')
                                .basket__goods-description
                                    p Футболка R18: 'only Arabica'
                                    p Размер: XL; Белая
                            .basket__goods-amount-price
                                .basket__goods-amount
                                    .basket__goods-amount-button(data-type='decrement')
                                    input.basket__goods-amount-num(type='text' placeholder='0')
                                    .basket__goods-amount-button(data-type='increment')
                        .basket__goods-info-price
                            .basket__goods-info 
                                p Скидка составляет #[span 10]%, так как Вы заказали более #[span 10] кг кофе
                            .basket__goods-wr-price
                                .basket__goods-discount #[span 6750] р.
                                .basket__goods-price #[span 5000] р.
                    
                    
                   
                hr.basket__underline

                .basket__wr-total-price 
                    .basket__wr-total-discount  
                        .basket__total-discount-text Скидка:
                        .basket__total-discount-num #[span 750] р.
                    .basket__total-price-old 11 750 р.
                    .basket__total-price
                        .basket__total-price-text Итог:
                        .basket__total-price-num #[span 11000] р.

                a(href="./place-an-order.html" title="Оформить заказ").basket__button Оформить